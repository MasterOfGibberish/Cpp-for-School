#include <iostream>
#include <fstream>
#include <iomanip>

const char FR[]="Skaitymas.txt";
const char FW[]="Akatsukai.txt";

using namespace std;
void Skaito (const char FR[], double a[], int &n);
void Filtravimas (double a[], int n, double &akatsukai);
void Irasymas (const char FW[], int n, double a[], double akatsukai);
int main()
{  int n;
   double a[100], akatsukai;
    Skaito ( FR,a,n);
    Filtravimas(a,n,akatsukai);
    Irasymas (FW, n, a, akatsukai);
    return 0;
}

void Skaito (const char FR[], double a[], int &n)
{
   ifstream fr(FR);
  fr>>n;
  for(int i=0; i<n; i++)
  {
       fr>>a[i];
  }
}

void Filtravmas(double a[], int n, double &akatsukai)
{
    for(int i=0; i<n; i++)
  {
      akatsukai = a[0]+a[1];
    if(a[i]+a[i+1]>akatsukai)
    {
        akatsukai=a[i]+a[i+1];

    }
  }
}
void Irasymas (const char FW[], int n, double a[],double akatsukai)
{
   ofstream fw(FW);
   fw<<n<<" ";
         for(int i=0; i<n; i++)
         {
              fw<<akatsukai<<" ";
         }

}

//Darzas///////////////////////////////////////////////////////////



void Skaiciuojame (int a[], int n, int k, int min)
{
  for(int i=0; i<n; i++)
  {
   for (int i=0; i<k; i++)
    {
        min=a[i];
      for (int j=i+1; j<k; j++)
        {
          if(a[i]>a[j])
              min =a[j];
              a[i]=a[j];
              a[j]=min;
                Irasymas (FW, n, k,a, min);
        }
    }
  }
}

////////////////////////////////////////////


#include <iostream>
#include <fstream>
#include <iomanip>

const char FR[]="duomenys.txt";
const char FW[]="Akatsukai.txt";

using namespace std;

void Skaito (const char FR[], int a[], int &k, int &n, int min);
void Skaiciuojame (int a[], int n, int k,int min);
void Irasymas (const char FW[], int n, int k, int a[], int min );

int main()
{
 int a[100], k,n, min;
  Skaito( FR,a,k,n, min);
  Skaiciuojame(a,n,k, min);
  Irasymas (FW, n, k,a, min);
  return 0;
}

void Skaito (const char FR[],int a[], int &k, int &n, int min)
{
   ifstream fr(FR);
   fr>>n;
   // cout<<" "<<k<<endl;
  for(int i=0; i<n; i++)
  {
      fr>>k;
       for(int i=0; i<k; i++)
       {
       fr>>a[i];
       cout<<a[i];
        Skaiciuojame(a,n,k, min);
       }
  }
}

void Skaiciuojame (int a[], int n, int k, int min)
{
  for(int i=0; i<n; i++)
  {
   for (int i=0; i<k; i++)
    {
        min=a[i];
      for (int j=i+1; j<k; j++)
        {
          if(a[i]>a[j])
              min =a[j];
              a[i]=a[j];
              a[j]=min;
                Irasymas (FW, n, k,a, min);
        }
    }
  }
}

void Irasymas (const char FW[], int n, int k, int a[], int min)
{
   ofstream fw(FW);
    for(int i=0; i<n; i++)
  {
       for(int j=0; j<k; j++)
       {
       fw<<a[j]<<endl;
       }
  }

}

